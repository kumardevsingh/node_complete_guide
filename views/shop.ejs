    <%- include('includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('includes/navigation.ejs') %>
    <main>
        <% if(prods.length >0){ %>
           
        <div class="grid">
                <% for(var i =0 ; i< prods.length; i++) { %>
                    <article class="card product-item">
                        <header class="card__header">
                            <h1 class="product__title"><%= prods[i].title %></h1>
                        </header>
                        <div class="card__image">
                            <img src="http://www.pngmart.com/files/1/Book-PNG-File.png" alt="A Book">
                        </div>
                        <div class="card__content">
                            <h2 class="product__price">$19.99</h2>
                            <p class="product__description">A very interesting book about so many even more interesting things!
                            </p>
                        </div>
                        <div class="card__actions">
                            <button class="btn">Add to Cart</button>
                        </div>
                    </article>
            <% } %>
        </div>
        
        <% } else {%>

            <h2>No product found! :( </h2>

            <% } %>
    </main>

    <%- include('includes/end.ejs') %>